@model IList<MeterReading>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    
    <br />
    <br />

    <div class="row">
        <div class="col-sm-14">
            <div class="card-box table-responsive">
                <table id="datatable-fixed-header" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Account ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Date</th>
                            <th>Reading Value</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td data-label="CustomerAccountId">
                                @Html.DisplayFor(modelItem => item.CustomerAccountId)
                            </td>
                            <td data-label="CustomerAccountId">
                                @Html.DisplayFor(modelItem => item.CustomerAccount.FirstName)
                            </td>
                            <td data-label="CustomerAccountId">
                                @Html.DisplayFor(modelItem => item.CustomerAccount.LastName)
                            </td>
                            <td data-label="MeterReadingDate">
                                @Html.DisplayFor(modelItem => item.MeterReadingDate)
                            </td>
                            <td data-label="MeterReadValue">
                                @Html.DisplayFor(modelItem => item.MeterReadValue)
                            </td>

                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
